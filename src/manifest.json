{
  "name": "Fast Scrum for Trello",
  "version": "0.1",
  "description": "Add scrum features to your Trello board",
  "content_scripts": [
    {
      "matches": ["https://trello.com/*"],
      "js": ["app.js"],
      "css": ["trelloscrum.css"]
    }
  ],
  "manifest_version" : 2,
  "icons": { "128": "trello-scrum-icon.png" },
  "web_accessible_resources": [
    "storypoints-icon.png",
    "points-done.png",
    "trello-scrum-icon_12x12.png",
    "trello-scrum-icon_18x18.png"
  ],
  "permissions": [
    "storage"
  ]
}
